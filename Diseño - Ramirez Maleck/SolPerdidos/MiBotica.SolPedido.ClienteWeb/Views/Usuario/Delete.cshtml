@model MiBotica.SolPedido.Entidades.Core.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>
<h4>¿Está seguro que desea eliminar este usuario?</h4>
<hr />

<dl class="dl-horizontal">
    <dt>Usuario</dt>
    <dd>@Model.CodUsuario</dd>

    <dt>Nombres</dt>
    <dd>@Model.Nombres</dd>
</dl>

@using (Html.BeginForm("Delete", "Usuario", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.IdUsuario)

    <div class="form-group mt-3">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
    </div>
}
